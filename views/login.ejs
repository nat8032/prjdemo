  <section class="vh-100" style="background-color: #eee">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px; ">
            <div class="card-body p-md-5 justify-content-center align-items-center">
              <img src="https://img.freepik.com/free-photo/person-using-laptop_53876-95246.jpg" class="img-fluid"
                alt="Sample image" style="width: 100%"/>
              <div class="d-flex ">
                <div class="card p-2 flex-fill" style="width: 18rem; position:relative;">
                  <div class="justify-content-center align-items-center">
                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">
                      Sign in
                    </p>
                    <form class="mx-1 mx-md-4" action="/users/checklogin" method="post">
                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                          <label class="form-label" for="form3Example3c">User ID (Mobile):</label>
                          <input name="username" type="tel" id="username" class="form-control" required
                            placeholder="Enter your user id:" maxlength="8" />
                        </div>
                      </div>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                          <label class="form-label" for="form3Example4c">Password</label>
                          <input name="password" type="password" id="password" class="form-control"
                            placeholder="Enter your password:" required />
                        </div>
                      </div>
                      <div class="d-flex flex-row align-items-center mb-4" style="color:red; font-size: 18px;">
                        <%= messages %>
                      </div>
                      <div class="text-center text-lg-start mx-4 mb-3 mb-lg-4">
                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
                          style="padding-left: 2.5rem; padding-right: 2.5rem">
                          Login
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                          Don't have an account?
                          <a href="/users/register" class="link-danger">Register</a>
                        </p>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                          <a href="#">Forget Password?</a>
                        </p>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
