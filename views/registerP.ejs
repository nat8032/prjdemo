  <script>
    function checkP() {
      let complete = true;
      
      let userName = document.getElementById("uName").value;
      let userPhone = Number(document.getElementById('uID').value);
      let userPassword = document.getElementById('password1').value.trim();
      let PW1 = document.getElementById("password1").value;
      let PW2 = document.getElementById("password2").value;
      // var errM = document.getElementById("errorMessage");

      // validate input data (basic)
      if (userName && userPhone && userPassword) {
        if (userName.length < 3) {
          alert('Please input valid user name'); // set user full name at least 3 char. length
          complete = false;
        } else if (isNaN(userPhone) || userPhone < 21000000 || userPhone > 98999999) {
          alert('Please input valid mobile phone number');     // with refernce tp OFCA HK numbering plan
          complete = false;
        } else if (PW1.length < 8) {
          alert('Please input at least 8 characters length password');      // set password at least 8 char. length
          complete = false;
        } else if (!(PW1 === PW2)) {
        alert("The password is different, please re-enter it.");
        complete = false;
      }}        
      return complete;
    }
  </script>
