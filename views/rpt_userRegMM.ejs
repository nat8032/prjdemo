<body autocomplete="off">
    <div>
        <div class='container d-flex align-self-center justify-content-center' style='padding: 20px; margin-top: 50px;'>
          <h1>每月課程登記情況</h1>
        </div>
    </div>
    <div class='container'>
        <div style='padding: 20px;'>
            <section class="container">
              <script>
                // get next month calendar in "YYYY-MM" format
                function getNextMth() {
                    var now = new Date();
                    var nextMth = new Date(now.getFullYear(), now.getMonth()+2, now.getDate());
                    return nextMth.getFullYear() + "-" + (nextMth.getMonth()).toString().padStart(2, '0');
                }
                const html = " <strong>請選擇查詢月份：</strong><input type='month' id='classSchedule' name='classSchedule' value='" + getNextMth() + "'/> "
                document.write(html);
              </script>
              <button type="button" class="btn btn-primary" onclick="getuserRegMM()">查詢</button>
            </section>
        </div>

        <div id="searchResult"></div>
    </div>

</body>
